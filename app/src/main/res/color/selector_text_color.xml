<?xml version="1.0" encoding="utf-8"?>
<!-- Selector para manejar el cambio de color del texto del BottomNavigationView -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color cuando el texto está seleccionado -->
    <item android:color="@color/PokemonOrange" android:state_checked="true"/>
    <!-- Color cuando el texto NO está seleccionado -->
    <item android:color="@color/PokemonDarkShadowCian" android:state_checked="false"/>
</selector>